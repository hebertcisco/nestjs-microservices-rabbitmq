{
    "name": "nestjs-microservices-rabbitmq",
    "version": "0.0.2",
    "description": "About RabbitMQ is an open-source and lightweight message broker which supports multiple messaging protocols.",
    "author": "Hebert Barros <hebert@hotbrains.com.br>",
    "private": true,
    "license": "UNLICENSED",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "engines": {
        "node": ">=16.18",
        "npm": ">=8.18"
    },
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\" \"scripts/**/*.(js|ts|md|mjs|cjs)\"",
        "start:worker": "node scripts/worker.cjs",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "prepare:enviroment": "node scripts/dev-enviroment.cjs",
        "lint": "eslint src --ext .js,.ts",
        "lint:fix": "eslint src --fix --ext .js,.ts",
        "prepare": "husky install",
        "prepublishOnly": "npm test && npm run lint",
        "preversion": "npm run lint",
        "version": "npm run format && git add -A src",
        "postversion": "git push && git push --tags"
    },
    "dependencies": {
        "@nestjs/core": "9.2.1",
        "@nestjs/mapped-types": "1.2.2",
        "@nestjs/microservices": "^9.2.1",
        "@nestjs/platform-express": "9.2.1",
        "@nestjs/schematics": "9.0.4",
        "amqp-connection-manager": "^4.1.9",
        "amqplib": "^0.10.3",
        "class-transformer": "0.5.1",
        "dotenv": "16.0.3",
        "express": "4.18.2",
        "nest-shared": "^5.0.0",
        "rimraf": "4.0.7",
        "tsyringe": "4.7.0",
        "yup": "1.0.0"
    },
    "devDependencies": {
        "@babel/cli": "7.20.7",
        "@babel/core": "7.20.12",
        "@babel/node": "7.20.7",
        "@babel/preset-env": "7.20.2",
        "@nestjs/cli": "9.2.0",
        "@nestjs/testing": "9.3.5",
        "@types/amqplib": "^0.10.1",
        "@types/dotenv": "8.2.0",
        "@types/express": "4.17.15",
        "@types/jest": "29.4.0",
        "@types/node": "^18.11.19",
        "@types/supertest": "2.0.12",
        "@typescript-eslint/eslint-plugin": "5.52.0",
        "@typescript-eslint/parser": "5.51.0",
        "@typescript-eslint/typescript-estree": "5.50.0",
        "eslint": "8.34.0",
        "eslint-config-airbnb-base": "15.0.0",
        "eslint-config-prettier": "8.6.0",
        "eslint-plugin-import": "2.27.5",
        "eslint-plugin-prettier": "4.2.1",
        "husky": "8.0.3",
        "jest": "29.4.1",
        "prettier": "2.8.1",
        "supertest": "6.3.3",
        "ts-jest": "29.0.5",
        "ts-loader": "9.4.2",
        "ts-node": "10.9.1",
        "tsconfig-paths": "4.1.1",
        "typescript": "4.9.4"
    },
    "optionalDependencies": {
        "@nestjs/common": "^9.3.8",
        "class-validator": "^0.14.0",
        "reflect-metadata": "^0.1.12",
        "rxjs": "^6.0.0 || ^7.0.0"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
